@model JavaTech3.ViewModels.VMProduct

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    @foreach (var item in Model.Products)
    {
        <div class="col-sm-6">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="@("~/Image/"+item.ImageProduct.ImageName)" asp-append-version="true"width="150px" height="150px">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Quantidade @item.Quantity</p>
                    <a asp-controller="Product_User" asp-action="Create" asp-route-id="@item.Id" >Distribute</a>
                </div>
            </div>
        </div>
    }
</div>







